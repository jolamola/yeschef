<!-- recipe form modal -->

<div class="modal fade recipe-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Add New Recipe</h4>
      </div>

      <div class="modal-body">
        <%= form_for @recipe do |r| %>

        <strong>Dish Name:</strong>
        <%= r.text_field :rName, hide_label: :true, class: "recipe-field" %>

        <strong>Serving Size:</strong>
        <%= r.text_field :serving_size, hide_label: :true %>

        <strong>Ingredients:</strong>
        <%= r.text_field :ingredient, hide_label: :true%>

        <strong>Directions:</strong>
        <%= r.text_field :instruction, hide_label: :true%>

        <strong>Image:</strong>
        <%= r.file_field :photo, hide_label: :true %>

        <%= r.submit 'Done' %>

        <% end %>

      </div>
    </div>
  </div>
</div>