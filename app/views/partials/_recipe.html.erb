
<%= bootstrap_form_for @recipe do |r| %>
  
  <strong>Dish Name:</strong>
  <%= r.text_field :rName, hide_label: :true %>

  <strong>Description:</strong>
  <%= r.text_area :description, hide_label: :true, size: "1x3" %>
  
  <strong>Serving Size:</strong>
  <%= r.text_field :serving_size, hide_label: :true%>

  <strong>Suggested Equipment:</strong>
  <%= r.text_field :equipment, hide_label: :true%>

  <strong>Image:</strong>
  <%= r.file_field :photo, hide_label: :true %>
  
  <%= r.submit 'Done' %>
  
<% end %>