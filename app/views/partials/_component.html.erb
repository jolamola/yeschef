
<%= bootstrap_form_for [@recipe, @component] do |f| %>
	<strong>Component name:</strong>
	<%= f.text_field :cName, hide_label: true%>
	<strong>Ingredients:</strong>
	<%= f.text_area :ingredient, hide_label: true, size: "80x10" %>
	<strong>Directions:</strong>
	<%= f.text_area :direction, hide_label: true, size: "80x10" %>	

	<%= f.submit "Done" %>
<% end %>