<!-- form to add component to recipe -->

<%= bootstrap_form_for [@recipe, @component] do |f| %>
	<strong>Component name:</strong>
	<%= f.text_field :cName, hide_label: true %>

	<strong>Ingredients:</strong>
	<%= f.text_area :ingredient, hide_label: true %>

	<strong>Directions:</strong>
	<%= f.text_area :direction, hide_label: true %>	

	<%= f.submit "Done" %>
<% end %>