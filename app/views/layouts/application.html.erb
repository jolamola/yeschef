	<%= yield %>

	<script>
		$(document).ready(function(){

			$('#button').click( function() {
				if ($('#menu').hasClass('hidden')) {
					$('#menu').removeClass('hidden');
					showPopout();
				}
				else {
					$('#menu').addClass('hidden');
					hidePopout();
				}
			});

			function showPopout() {
				$('#content').animate(
					{ left: $('#menu').width() }, 'fast', 
					function() {
						$('#button').html('<i id="menu-button" href="#menu-button" class="fa fa-times fa-2x menu-icon"></i>');
					}
					);
			}

			function hidePopout() {
				$('#content').animate(
					{ left: 0 }, 'fast', 
					function() {
						$('#button').html('<i id="menu-button" href="#menu-button" class="fa fa-bars fa-2x menu-icon"></i>');
					}
					);
			}
		});

