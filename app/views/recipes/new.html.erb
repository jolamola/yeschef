<%= form_for @recipe do |r| %>
  
  Dish Name:
  <br><%= r.text_field :name, size: "27" %><br>

  Description:
  <br><%= r.text_area :description, size: "30x2" %><br>
  
  Serving Size:
  <br><%= r.text_field :serving_size, size: "27" %><br>

  Equipment:
  <br><%= r.text_field :equipment, size: "27" %><br>

  Ingredients:
  <br><%= r.text_area :ingredient, size: "30x20" %><br>

  Directions:
  <br><%= r.text_area :direction, size: "30x20" %><br>


  <br><%= r.submit 'Submit' %>
  
<% end %>