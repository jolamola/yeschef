<h1> recipes landing page</h1>

<p><%=link_to "Add new", new_recipe_path %></p>

<table class = "table table-hover">
	<thead>
		<th>Dish Name</th>
		<th>Serving Size</th>
		<th>Description</th>
	</thead>
 
	<tbody>
		<% @recipes.each do |r| %>
			<tr>
				<td><%= r.rName %></td>
				<td><%= r.serving_size %></td>
				<td><%= r.description %></td>
				<td><%= link_to "Show Details", recipe_path(r) %></td>
			</tr>
			<% end %>
	</tbody>
</table>	


